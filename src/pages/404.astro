---
import Layout from "@layouts/Layout.astro"
---

<Layout title="Page Not Found">
	<main class="grid min-h-full place-items-center px-6 py-24 sm:py-32 lg:px-8">
		<div class="text-center">
			<p class="text-base font-semibold">404</p>
			<h1 class="mt-4 text-3xl font-bold tracking-tight text-lime-600 sm:text-5xl">
				Page not found
			</h1>
			<p class="mt-6 text-base leading-7">
				Sorry, we couldn’t find the page you’re looking for.
			</p>
			<div class="mt-10 flex items-center justify-center gap-x-6">
				<a
					href="/"
					class="rounded-md bg-lime-600 px-3.5 py-2.5 text-sm font-semibold text-gray-50 shadow-sm hover:bg-lime-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-lime-600"
					>Go back home</a
				>
			</div>
		</div>
	</main>
</Layout>
